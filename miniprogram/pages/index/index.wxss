/**index.wxss**/
.container {
  padding: 0;
  background-color: #f5f5f5;
}

/* 轮播图样式 */
.banner-section {
  margin-bottom: 30rpx;
}

.banner-swiper {
  height: 400rpx;
  width: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-title {
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  right: 30rpx;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
}

/* 导航菜单样式 */
.nav-section {
  margin: 0 30rpx 30rpx;
}

.nav-grid {
  display: flex;
  flex-wrap: wrap;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.nav-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.nav-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: #f0f8ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.nav-icon image {
  width: 48rpx;
  height: 48rpx;
}

.nav-text {
  font-size: 24rpx;
  color: #333333;
  text-align: center;
}

/* 解决方案样式 */
.solutions-section {
  margin: 0 30rpx 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 30rpx;
  padding-left: 20rpx;
}

.solutions-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.solution-card {
  margin: 0;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.solution-content {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.solution-icon {
  width: 80rpx;
  height: 80rpx;
  flex-shrink: 0;
}

.solution-icon image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.solution-info {
  flex: 1;
}

.solution-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 12rpx;
}

.solution-desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

.solution-action {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 8rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-text {
  font-size: 26rpx;
  color: #1890FF;
}

.action-arrow {
  font-size: 24rpx;
  color: #1890FF;
}

/* 企业介绍样式 */
.company-section {
  margin: 0 30rpx 30rpx;
}

.company-card {
  margin: 0;
  text-align: center;
}

.company-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.8;
  margin: 30rpx 0;
  text-align: left;
}

.company-contact {
  margin-top: 40rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #1890FF 0%, #40a9ff 100%);
  color: #ffffff;
  border-radius: 50rpx;
  border: none;
  padding: 24rpx 60rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
}