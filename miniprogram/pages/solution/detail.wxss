/**solution/detail.wxss**/
.container {
  padding: 0;
  background-color: #f5f5f5;
}

/* 方案头部 */
.solution-header {
  position: relative;
  margin-bottom: 30rpx;
}

.solution-banner {
  width: 100%;
  height: 400rpx;
}

.solution-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 60rpx 30rpx 30rpx;
  color: #ffffff;
}

.solution-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.solution-summary {
  font-size: 28rpx;
  line-height: 1.6;
  opacity: 0.9;
}

/* 方案详情 */
.solution-content {
  margin: 0 30rpx 30rpx;
}

.content-section,
.features-section,
.scenarios-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background-color: #1890FF;
  border-radius: 4rpx;
}

.content-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.8;
  text-align: justify;
}

/* 技术特点 */
.features-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.feature-icon {
  width: 32rpx;
  height: 32rpx;
  background-color: #1890FF;
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.feature-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  flex: 1;
}

/* 应用场景 */
.scenarios-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.scenario-item {
  background-color: #f8faff;
  border: 2rpx solid #e6f4ff;
  border-radius: 12rpx;
  padding: 24rpx 20rpx;
  text-align: center;
}

.scenario-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #1890FF;
  margin-bottom: 12rpx;
}

.scenario-desc {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.5;
}

/* 案例展示 */
.cases-section {
  margin: 0 30rpx 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.cases-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.case-item {
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.case-image {
  width: 100%;
  height: 200rpx;
}

/* 联系咨询 */
.contact-section {
  margin: 0 30rpx 30rpx;
}

.contact-card {
  background: linear-gradient(135deg, #1890FF 0%, #40a9ff 100%);
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  text-align: center;
  color: #ffffff;
}

.contact-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.contact-desc {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

.contact-actions {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.btn-primary {
  background-color: #ffffff;
  color: #1890FF;
  border-radius: 50rpx;
  border: none;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  flex: 1;
  max-width: 200rpx;
}

.btn-secondary {
  background-color: transparent;
  color: #ffffff;
  border: 2rpx solid #ffffff;
  border-radius: 50rpx;
  padding: 18rpx 38rpx;
  font-size: 28rpx;
  flex: 1;
  max-width: 200rpx;
}