/**products/index.wxss**/
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-bottom: 2rpx solid #f0f0f0;
}

.search-input {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 50rpx;
  padding: 16rpx 24rpx;
  gap: 12rpx;
}

.search-icon {
  color: #999999;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.filter-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 20rpx;
  background-color: #1890FF;
  color: #ffffff;
  border-radius: 50rpx;
  font-size: 26rpx;
}

/* 筛选面板 */
.filter-panel {
  background-color: #ffffff;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
  animation: slideDown 0.3s ease-out;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.filter-section {
  margin-bottom: 30rpx;
}

.filter-section:last-child {
  margin-bottom: 0;
}

.filter-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
  display: block;
}

.filter-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.filter-tag {
  padding: 12rpx 24rpx;
  background-color: #f8f8f8;
  color: #666666;
  border-radius: 50rpx;
  font-size: 26rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.filter-tag.active {
  background-color: #e6f4ff;
  color: #1890FF;
  border-color: #1890FF;
}

/* 产品列表 */
.products-list {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.product-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.product-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.product-image {
  position: relative;
  width: 100%;
  height: 300rpx;
}

.product-image image {
  width: 100%;
  height: 100%;
}

.product-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background-color: #ff4d4f;
  color: #ffffff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: bold;
}

.product-info {
  padding: 30rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.product-desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.product-features {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.feature-tag {
  padding: 6rpx 12rpx;
  background-color: #f0f8ff;
  color: #1890FF;
  border-radius: 8rpx;
  font-size: 22rpx;
  border: 1rpx solid #d6e4ff;
}

.product-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.product-price {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.price-label {
  font-size: 24rpx;
  color: #999999;
}

.price-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4d4f;
}

.price-unit {
  font-size: 24rpx;
  color: #999999;
}

.btn-consult {
  background-color: #1890FF;
  color: #ffffff;
  border-radius: 50rpx;
  border: none;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 40rpx;
}

.btn-refresh {
  background-color: #1890FF;
  color: #ffffff;
  border-radius: 50rpx;
  border: none;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 加载更多 */
.load-more {
  padding: 40rpx;
  text-align: center;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  color: #999999;
  font-size: 26rpx;
}

.btn-load-more {
  background-color: #f8f8f8;
  color: #666666;
  border: 2rpx solid #e8e8e8;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 浮动联系按钮 */
.float-contact {
  position: fixed;
  right: 30rpx;
  bottom: 120rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #1890FF 0%, #40a9ff 100%);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 22rpx;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.4);
  z-index: 999;
  transition: transform 0.3s ease;
}

.float-contact:active {
  transform: scale(0.9);
}

.float-contact icon {
  margin-bottom: 8rpx;
}